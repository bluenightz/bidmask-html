extends /template/basic-login.pug

//- css headmeta
block append headCSS
  -
    var css = [
      
    ]
  each item in css
    link(type="text/css", rel="stylesheet", href=item)

//- js footer
block prepend script
  -
    var js = [
      "assets/js/profile.js"
    ]
  each item in js
    script(src=item)


block prepend content
  .container-fluid
    .row
      include inc/user-nav.pug
    .row
      .container
        .row.mb-lg.mt-xs
          .col-md-12
              .row.mb-sm
                .col-xs-6
                  h4.text_head--h4 Post Asset
                .col-xs-6.text-right
                  a.btn.btn-primary(href="#")
                    i.fa.fa-plus
                    |   Add Assets
              .row
                .col-xs-12
                  .table-responsive.pos-relative.asset-user
                    table.table.table-striped.table-hover.table-bordered
                      colgroup
                        col(width="20%")
                        col(width="")
                        col(width="")
                        col(width="10%")
                        col(width="10%")
                        col(width="5%")
                        col(width="")
                      thead
                        tr
                          th.text-center Assets Into
                          th &nbsp;
                          th.text-center Date
                          th.text-center Buyer Amount
                          th.text-center Action
                          th.text-center 5P
                          th.text-center Tools
                      - var n = 0;
                        tbody
                          while n < 10
                            tr
                              td
                                a.asset_img(href='#')
                                  img(src="assets/img/img-test.jpg")
                                  span 
                                    i.fa.fa-sign-in 
                                    |   ดูรายละเอียด
                              td
                                h4.text_head--h4 
                                  a(href='#') Centara Condo
                                p.text_desc
                                  | 20/7 Bangsue, Bangkok. <br>
                                  | Item#: E5641B-1000 <br>
                                  | Type: Condo
                                h4.text_head--h4 
                                  a(href='#') Auction Info
                                p.text_desc
                                  | Bid Deposit: 5,000 ฿ <br>
                                  | Bid Increment: 2,000 ฿ <br>
                                  | Strating Price: 6,000 ฿ <br>
                              td
                                | Start: 20 Aug 2017 <br>
                                | End: 22 Aug 2017
                              td.text-center
                                i.fa.fa-user
                                |   61 People
                              td.text-center
                                if ( n == 2 )
                                  .text-center Delay 31 Aug
                                else
                                  span.label.label-default.text-sm Cancel
                              td.text-center
                                span.text-p 4P
                              td.text-center.asset-user-action
                                  a(href="#")
                                    i.fa.fa-pencil
                                    |   แก้ไข
                                  a(href="#note-modal", data-toggle="modal") 
                                    i.fa.fa-calendar
                                    |   เลื่อน
                                  a(href="#note-modal", data-toggle="modal") 
                                    i.fa.fa-times
                                    |   ยกเลิก
                            - n++
                    input#ui-guide(type='checkbox')
                    label.ui-guide(for="ui-guide")
                      span
                        i.fa.fa-arrow-left
                        | เลื่อนเพื่อดูเพิ่มเติม
                        i.fa.fa-arrow-right
              +line(1)
              .row.mt-sm
                // start pagination section
                ul.pagination-list
                  <li><a href="#"><<</a></li>
                  <li><a href="#"><</a></li>
                  <li class="active"><a href="#">1</a></li>
                  <li><a href="#">2</a></li>
                  <li><a href="#">3</a></li>
                  <li><a href="#">>></a></li>
                  <li><a href="#">></a></li>
                // end pagination section
  <div class="modal fade" id="note-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">หมายเหตุในกรณีที่ยกเลิก/เลื่อน</h4>
        </div>
        <div class="modal-body">
          form.form.form-horizontal
            .form-group
              .col-xs-12
                textarea.form-control(rows="5")
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">ปิด</button>
          <button type="button" class="btn btn-primary">บันทึก</button>
        </div>
      </div>
    </div>
  </div>